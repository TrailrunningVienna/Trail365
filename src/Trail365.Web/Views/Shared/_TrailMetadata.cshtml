@using Trail365
@model Trail365.ViewModels.TrailViewModel
@{
    string col_left = "col-2";
    string col_right = "col-2 text-right";
    string col_right1 = "col pl-2";
    string row = "row no-gutters";
}

    <div class="@row">

        <div class="@col_left">Distanz:</div>
        @if (Model.DistanceKm.HasValue)
        {
            <div class="@col_right">
                @Model.DistanceKm.Value.ToKmFormat()
            </div>
            <div class="@col_right1"><span>km&nbsp;</span><i class="fas fa-arrows-alt-h"></i></div>
        }
        else
        {
            <div class="@col_right">N/A</div>
            <div class="@col_right1"><span>&nbsp;</span></div>
        }
    </div>


    <div class="@row">
        <div class="@col_left">Anstieg:</div>
        @if (Model.Ascent.HasValue)
        {
            <div class="@col_right">
                @Model.Ascent.ToIntFormat()
            </div>
            <div class="@col_right1"><span>&nbsp;m&nbsp;</span><i class="fas fa-arrow-up"></i></div>
        }
        else
        {
            <div class="@col_right">N/A</div>
            <div class="@col_right1"><span>&nbsp;</span></div>
        }
    </div>

    <div class="@row">
        <div class="@col_left">Abstieg:</div>
        @if (Model.Descent.HasValue)
        {
            <div class="@col_right">@Model.Descent.ToIntFormat()</div>
            <div class="@col_right1"><span>&nbsp;m&nbsp;</span><i class="fas fa-arrow-down"></i></div>
        }
        else
        {
            <div class="@col_right">N/A</div>
            <div class="@col_right1"><span>&nbsp;</span></div>
        }
    </div>


@if (this.Model.HasClassifications)
{

    <div class="@row">
        <div class="@col_left"><span>&nbsp;</span></div>
        <div class="@col_right"><span>&nbsp;</span></div>
    </div>

    <div class="@row">
        <div class="@col_left">Bewertung</div>
        <div class="@col_right"><span>&nbsp;</span></div>
    </div>

    <div class="@row">
        <div class="@col_left">Trail:</div>
        <div class="@col_right">@Model.UnpavedTrail</div>
        <div class="@col_right1">km</div>
    </div>

    <div class="@row">
        <div class="@col_left">Forststrasse:</div>
        <div class="@col_right">@Model.PavedRoad</div>
        <div class="@col_right1">km</div>
    </div>

    <div class="@row">
        <div class="@col_left">Asphalt:</div>
        <div class="@col_right">@Model.AsphaltedRoad</div>
        <div class="@col_right1">km</div>
    </div>

    <div class="@row">
        <div class="@col_left">Unbekannt:</div>
        <div class="@col_right">@Model.Unclassified</div>
        <div class="@col_right1">km</div>
    </div>

}

@if (this.Model.ShowChallenge)
{
    <div class="@row">
        <div class="@col_left d-none d-sm-block">Challenge:</div>
        <div class="@col_left d-block d-sm-none">CH:</div>
        <div class="@col_right">@Model.Challenge</div>
    </div>
}

@if (this.Model.CanDownload() && (this.Model.ShowDownloadLink))
{
    <div class="@row">
        <div class="@col_left">
            Gpx Track:
        </div>
        <div class="@col_right">
            <a class="fg-link" href="@Model.GpxUrl" download="myfile1.gpx">
                <p>Gpx Track</p>
            </a>
        </div>
    </div>
}
