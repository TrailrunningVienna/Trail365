@model Trail365.ViewModels.StoryCollectionViewModel
@if (Model.Stories.Any())
{
    <div class="row mt-4 mt-lg-2 mb-1">
        <div class="col">
            &nbsp;
        </div>
    </div>

    @foreach (var item in Model.Stories)
    {
        <partial name="_StoryAsListItem" model="@(item)" />
        @if (item.ID != Model.Stories.Last().ID)
        {
            <div class="row d-lg-none">
                <div class="col-12">
                    <hr class="border-top" />
                </div>
            </div>
        }
    }
}
