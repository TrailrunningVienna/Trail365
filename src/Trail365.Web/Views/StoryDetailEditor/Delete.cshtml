@model Trail365.ViewModels.StoryBlockViewModel

@{
    ViewData["Title"] = $"Block '{this.Model.BlockTypeAsText}' löschen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h4 class="headline mb-1">@ViewData["Title"]</h4>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <hr class="border-top" />
    </div>
</div>

<form asp-action="Delete">
    <div class="row">
        <div class="col-4">
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-lg btn-primary d-block w-100">
                <i class="fa fa-arrow-red">&nbsp;</i>
                Block löschen
            </button>
        </div>
        <div class="col-4"></div>

        <div class="col-4">
            <a asp-controller="StoryDetails" asp-route-id="@Model.StoryID" asp-action="Index" class="btn btn-primary d-block w-100">
                <i class="fa fa-arrow-red">&nbsp;</i>
                Zurück
            </a>
        </div>
    </div>
</form>
